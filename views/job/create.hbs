<h1 class="titles">Add a Job</h1>

<form method="POST" enctype="multipart/form-data" >

  <label for="input-title">&#128221 Title</label>
  <input type="text" id="input-title" name="title" placeholder="Title of the project" required/>


  <label for="input-category">&#128187 Category</label>
  <select name="category" id="input-category" required>
    <option value="" selected disabled>Choose an option</option> 
    <option value="Web development">Web development</option>
    <option value="Mobile apps">Mobile apps</option>
    <option value="Game development">Game development</option>
    <option value="Blockchain development">Blockchain development</option>
    <option value="Cybersecurity">Cybersecurity</option>
    <option value="Bug fix">Bug fix</option>
    <option value="Chatbots">Chatbots</option>
  </select>

  <div>
    <label for="input-skill">&#129504 Skills needed</label>
    <div>
      <input type="checkbox" id="input-checkbox-javascript" value="javascript" name="skill" />
      <label for="input-checkbox-javascript">JavaScript</label>
    </div>
    <div>
      <input type="checkbox" id="input-checkbox-css" value="css" name="skill" />
      <label for="input-checkbox-css">Css</label>
    </div>
    <div>
      <input type="checkbox" id="input-checkbox-html" value="html" name="skill" />
      <label for="input-checkbox-html">Html</label>
    </div>
    <div>
      <input type="checkbox" id="input-checkbox-mongodb" value="mongodb" name="skill" />
      <label for="input-checkbox-mongodb">Mongodb</label>
    </div>
    <div>
      <input type="checkbox" id="input-checkbox-canvas" value="canvas" name="skill" />
      <label for="input-checkbox-canvas">Canvas</label>
    </div>
    <div>
      <input type="checkbox" id="input-checkbox-react" value="react" name="skill" />
      <label for="input-checkbox-react">React</label>
    </div>
    <div>
      <input type="checkbox" id="input-checkbox-vue" value="vue" name="skill" />
      <label for="input-checkbox-vue">Vue</label>
    </div>
  </div>

  <label for="time">&#9203 Project deadline</label>
  <input type="number" id="time" name="time" placeholder="In days">

  <label for="budget">&#128182 Project budget (â‚¬)</label>
  <input type="number" id="budget" name="budget" placeholder="How much can you spend in this project?">

  <label for="status">&#128678 Project status</label>
  <select name="status" id="input-status" >
    <option value="Available" >Available</option> 
  </select>


  <label for="input-image">&#128248 Image</label>
  <input type="file" id="input-image" name="image" accept="image/png, image/jpeg">

  <button class="btn btn-primary rounded">Submit</button>
</form>

