<h1 class="titles">Find your Dev Job</h1>

<form action="/search" method="GET">
<label for="input-search"></label>
<input type="text" id="input-search" name="search" placeholder="Javascript, React, Rails... " class="shadow p-3 mb-5 bg-white rounded border" style="line-height: 40px;" />
</form>


{{#each job}}
<div class="card carta shadow p-3 mb-5 bg-white rounded" style="width: 100%;">

<div  class="card-body">
    <h1>{{title}}</h1>
    <span class="separate">&#129504 {{skill}}</span></br>
    <span class="separate">&#9203 {{time}} days</span></br>
    <span class="separate">&#128182 â‚¬{{budget}}</span></br>
    <span class="separate">&#128187 {{category}}</span></br>
    <span class="separate">&#128100 {{creator.firstname}} {{creator.lastname}}</span></br>
    <span class="separate">&#128678 {{status}}</span></br>
    <span class="separate">&#128197 {{date creationDate "D MMMM Y"}}</span></br>
    <br>
    <a href="/job/{{_id}}" target="_blank" class="btn btn-primary rounded">Check this job</a>
    <div class="job-border"></div>

 </div>
</div>
   
{{/each}}
