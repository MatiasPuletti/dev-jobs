<h1 class="titles">Find your Dev Job</h1>

<form action="/search" method="GET">

<label for="input-search"></label>
<input type="text" id="input-search" name="q" placeholder="Javascript, React, Rails... " class="shadow p-3 mb-5 bg-white rounded border" style="line-height: 40px;" />

  <button>Search</button>


{{!-- {{#if filterRoute}} --}}
<!--<input type="checkbox" id="input-checkbox-css" value="css" name="skill" />-->
  <div class="checkbox-wrapper">
  <div class="checkbox-item">
      <input type="checkbox" id="input-checkbox-javascript" value="javascript" name="skill" {{#if skillCheckObj.javascript}} checked {{/if}}/>
      <label for="input-checkbox-javascript">JavaScript</label>
    </div>
    <div class="checkbox-item">
      <input type="checkbox" id="input-checkbox-css" value="css" name="skill" {{#if skillCheckObj.css}} checked {{/if}}/>
      <label for="input-checkbox-css">Css</label>
    </div>
    <div class="checkbox-item">
      <input type="checkbox" id="input-checkbox-html" value="html" name="skill" {{#if skillCheckObj.html}} checked {{/if}}/>
      <label for="input-checkbox-html">Html</label>
    </div>
    <div class="checkbox-item">
      <input type="checkbox" id="input-checkbox-mongodb" value="mongodb" name="skill" {{#if skillCheckObj.mongodb}} checked {{/if}}/>
      <label for="input-checkbox-mongodb">Mongodb</label>
    </div>
    <div class="checkbox-item">
      <input type="checkbox" id="input-checkbox-canvas" value="canvas" name="skill" {{#if skillCheckObj.canvas}} checked {{/if}}/>
      <label for="input-checkbox-canvas">Canvas</label>
    </div>
    <div class="checkbox-item">
      <input type="checkbox" id="input-checkbox-react" value="react" name="skill" {{#if skillCheckObj.react}} checked {{/if}}/>
      <label for="input-checkbox-react">React</label>
    </div>
    <div class="checkbox-item">
      <input type="checkbox" id="input-checkbox-vue" value="vue" name="skill" {{#if skillCheckObj.vue}} checked {{/if}}/>
      <label for="input-checkbox-vue">Vue</label>
    </div>
  </div>
{{!-- {{/if}} --}}
</form>

{{#each job}}
<div class="card carta shadow p-3 mb-5 bg-white rounded" style="width: 100%;">

<div  class="card-body">
    <h1>{{title}}</h1>
    <span>&#129504 {{skill}}</span></br>
    <span>&#9203 {{time}} days</span></br>
    <span>&#128182 â‚¬{{budget}}</span></br>
    <span>&#128187 {{category}}</span></br>
    <span>&#128100 {{creator.firstname}} {{creator.lastname}}</span></br>
    <span>&#128678 {{status}}</span></br>
    <span>{{creationDate}}</span></br>
    <span>{{date creationDate "D MMMM Y"}}</span></br>
    <a href="/job/{{_id}}" target="_blank" class="btn btn-primary rounded">Check this job</a>
    <div class="job-border"></div>

 </div>
</div>
   
{{/each}}
