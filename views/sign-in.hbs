<h1 class="titles">Sign In</h1>


<form action="/authentication/sign-in" method="POST">
  <label for="input-email" >&#128231 Email</label>
  <input type="email" id="input-email" name="email" placeholder="Your Email" class="shadow p-3 mb-5 bg-white rounded border"/>
  <label for="input-password">&#128273 Password</label>
  <input type="password" name="password" id="input-password" placeholder="A Strong Password" class="shadow p-3 mb-5 bg-white rounded border" />
  <button class="btn btn-primary rounded">Sign In</button>
</form>
