<form action="/authentication/sign-up" method="POST">

  <label for="input-firstname">First Name</label>
  <input type="text" id="input-firstname" name="firstname" placeholder="Your First Name" />

  <label for="input-lastname">Last Name</label>
  <input type="text" id="input-lastname" name="lastname" placeholder="Your Last Name" />

  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" placeholder="Your Email" />

  <label for="input-password">Password</label>
  <input type="password" name="password" id="input-password" placeholder="A Strong Password" />

  <label for="input-userType">User Type</label>
  <select name="userType" id="input-userType" required>
    <option value="" selected disabled>Choose your user type</option> <!-- Display empty placeholder value-->
    <option value="publisher">Publisher - I want to publish a job</option>
    <option value="provider">Provider - I provide professional dev services</option>
  </select>

  <button>Sign Up</button>
  
</form>
