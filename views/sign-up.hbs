<h1 class="titles">Join DevJobs</h1>


<form action="/authentication/sign-up" method="POST" enctype="multipart/form-data">

  <label for="input-firstname">&#128100 First Name</label>
  <input type="text" id="input-firstname" name="firstname" placeholder="Your First Name" class="shadow p-3 mb-5 bg-white rounded border" required />

  <label for="input-lastname">&#128100 Last Name</label>
  <input type="text" id="input-lastname" name="lastname" placeholder="Your Last Name" class="shadow p-3 mb-5 bg-white rounded border" required/>

  <label for="input-location">&#128205 Location</label>
  <input type="text" id="input-location" name="location" placeholder="Where do you live?" class="shadow p-3 mb-5 bg-white rounded border" required/>
  
  <label for="input-language">&#128483 Language/s</label>
  <input type="text" id="input-language" name="language" placeholder="What language/s do you speak?" class="shadow p-3 mb-5 bg-white rounded border" required/>

  <label for="input-email">&#128231 Email</label>
  <input type="email" id="input-email" name="email" placeholder="Your Email" class="shadow p-3 mb-5 bg-white rounded border" required />

  <label for="input-password">&#128273 Password</label>
  <input type="password" name="password" id="input-password" placeholder="A Strong Password" class="shadow p-3 mb-5 bg-white rounded border" required/>

  <label for="input-profile-picture">&#128248 Profile Picture</label>
  <input id="input-profile-picture" type="file" name="image" accept="image/png, image/jpeg" class="shadow p-3 mb-5 bg-white rounded border" required>

  <label for="input-userType" >&#128161 What do you want to use DevJobs for?</label>
  <select name="userType" id="input-userType" class="shadow p-3 mb-5 bg-white rounded border" required>
    <option value="" selected disabled>Choose your user type</option>
    <option value="publisher">I want to hire talent</option>
    <option value="provider">I'm looking for a job</option>
  </select>

  <button class="btn btn-primary rounded">Sign Up</button>
  
</form>
